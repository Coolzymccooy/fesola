{
  "type": "object",
  "additionalProperties": true,
  "required": ["school", "calendar", "campuses", "admissions", "fees"],
  "properties": {
    "school": {
      "type": "object",
      "required": ["name", "lastUpdated", "timezone"],
      "properties": {
        "name": { "type": "string" },
        "tagline": { "type": "string" },
        "lastUpdated": { "type": "string" },
        "timezone": { "type": "string" }
      }
    },
    "calendar": {
      "type": "object",
      "required": ["academicYear", "terms"],
      "properties": {
        "academicYear": { "type": "string" },
        "terms": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "startDate", "resumptionDate", "endDate"],
            "properties": {
              "name": { "type": "string" },
              "startDate": { "type": "string" },
              "resumptionDate": { "type": "string" },
              "endDate": { "type": "string" }
            }
          }
        }
      }
    },
    "campuses": { "type": "array" },
    "admissions": { "type": "object" },
    "fees": {
      "type": "object",
      "required": ["publiclyShareable", "policy", "bands"],
      "properties": {
        "publiclyShareable": { "type": "boolean" },
        "policy": { "type": "string" },
        "bands": { "type": "array" }
      }
    }
  }
}
